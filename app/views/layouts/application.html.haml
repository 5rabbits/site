!!!
%html
  %head
    %title
      - if content_for?(:title)
        = "#{yield(:title)} - Lemontech Engineering Team"
      - else
        = 'Lemontech Engineering Team'

    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    = favicon_link_tag asset_path('isotype.png')
  %body
    %nav.navbar.navbar-expand-lg.navbar-light.fixed-top.app-navbar
      .container
        %a.navbar-brand.app-logo{ href: '/' }
          %span let
          = image_tag 'isotype.png'

        %button.navbar-toggler{"aria-controls" => "navbarSupportedContent", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarSupportedContent", "data-toggle" => "collapse", :type => "button"}
          %span.navbar-toggler-icon

        #navbarSupportedContent.collapse.navbar-collapse
          %ul.navbar-nav.ml-auto
            %li{ class: nav_item_class('home') }
              = link_to '/', class: 'nav-link' do
                = t('application.home.link')

            %li{ class: nav_item_class('team', 'member') }
              = link_to team_url, class: 'nav-link' do
                = t('application.team.link')

            %li{ class: nav_item_class('community') }
              = link_to community_url, class: 'nav-link' do
                = t('application.community.link')

            %li.nav-item
              = link_to blog_url, class: 'nav-link', target: :_blank, rel: 'noopener noreferrer' do
                = t('application.blog.link')

    = yield

    %footer.app-footer
      .container
        .app-footer-row
          = link_to 'https://www.lemontech.com', target: :_blank, rel: 'noopener noreferrer'  do
            = image_tag 'lemontech.png', class: 'lemontech-logo'

          %ul
            %li
              = link_to '/', class: 'nav-link' do
                = t('application.home.link')

            %li
              = link_to team_url, class: 'nav-link' do
                = t('application.team.link')

            %li
              = link_to community_url, class: 'nav-link' do
                = t('application.community.link')

            %li
              = link_to blog_url, class: 'nav-link', target: :_blank, rel: 'noopener noreferrer' do
                = t('application.blog.link')

